<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hallo"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:text="linear layouttt"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="36dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/harambe" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="50dp"
            android:text="Relative layout bla bla bla" />
    </LinearLayout>

    <Button
        android:id="@+id/BtnToRLAct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="BtnToRLActOnClicked"
        android:text="Relative" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="74dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/harambe" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="50dp"
            android:text="Constraint layout bla bla bla" />
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="BtnToConstraintOnClicked"
        android:text="Constraint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="77dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/harambe" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="50dp"
            android:text="Grid layout bla bla bla" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Grid" />

</LinearLayout>